{
  "name": "sentry-typescript-slack-bot",
  "private": true,
  "version": "1.0.0",
  "description": "Slackbot for sentry to update with typescript conversion progress",
  "main": "lib/index",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "deploy": "yarn build && (yarn deploy:events & yarn deploy:stats)",
    "deploy:events": "gcloud functions deploy events --allow-unauthenticated --project=sercy-2de63 --runtime nodejs10 --trigger-http --memory=128MB",
    "deploy:stats": "gcloud functions deploy stats --allow-unauthenticated --project=sercy-2de63 --runtime nodejs10 --trigger-http --memory=128MB",
    "dev": "yarn build --watch & nodemon --exec \"yarn start\"",
    "start": "DEBUG=slash-command-template node src/index.js",
    "lint": "yarn eslint **/*.ts --fix",
    "test": "yarn eslint **/*.ts",
    "test:watch": "yarn jest --watch --notify --notifyMode=change --coverage"
  },
  "authors": [
    "Billy Vong <billy@sentry.io>"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^16.35.1",
    "@slack/events-api": "^2.3.0",
    "axios": "^0.19.1"
  },
  "devDependencies": {
    "@google-cloud/nodejs-repo-tools": "^3.3.0",
    "@types/express": "^4.17.3",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  },
  "cloud-repo-tools": {
    "requiresKeyFile": true,
    "requiresProjectId": true
  }
}
